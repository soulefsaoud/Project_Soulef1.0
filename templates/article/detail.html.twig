{% extends "base.html.twig" %}

{% block title %} Detail d'un article{% endblock %}

{% block body %}
<div class="container pt-5">
    <div class="row">
        <div class="class col-12">
        <div class="class card">
        <div class="class card-header">
            <h3>
            {{ article.titre | upper }}
            </h3>
          </div>
        <div class="card-body">
        {{ article.contenu }}
        </div>
        <div class="card-footer">
        <p>Publi√© le : {{ article.createdAt | date('d-m-Y') }}</p>
        <p>Auteur : {{ article.auteur.prenom}} {{ article.auteur.nomDeFamille }}/p>
        
        
        </div>
        </div>
        
        <a class="btn btn-danger mt-3" href= "{{ path('supprimer_article', {'id':article.id}) }}"> Supprimer l'article </a>
        </div>
    
    
    </div>


</div>







{% endblock %}